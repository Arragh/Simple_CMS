@model Simple_CMS.ViewModels.Account.RegisterViewModel

<table class="content">
    <tr>
        <td class="content">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="UserName"></label><br />
                    <input type="text" asp-for="UserName" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <br />
                <div>
                    <label asp-for="Email"></label><br />
                    <input type="email" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <br />
                <div>
                    <label asp-for="Password"></label><br />
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <br />
                <div>
                    <label asp-for="PasswordConfirm"></label><br />
                    <input type="password" asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <br />
                <div>
                    <input type="submit" value="Регистрация" />
                </div>
            </form>
        </td>
    </tr>
</table>

@section scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}