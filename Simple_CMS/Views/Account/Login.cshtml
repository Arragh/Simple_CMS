@model Simple_CMS.ViewModels.Account.LoginViewModel

<table class="content">
    <tr>
        <td class="content">
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div>
                    <label asp-for="UserName"></label><br />
                    <input type="text" asp-for="UserName" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <br />
                <div>
                    <label asp-for="Password"></label><br />
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <br />
                <div>
                    <label asp-for="RememberMe"></label><br />
                    <input type="checkbox" asp-for="RememberMe" />
                </div>
                <br />
                <div>
                    <input type="submit" value="Войти" />
                </div>
            </form>
        </td>
    </tr>
</table>

@section scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}