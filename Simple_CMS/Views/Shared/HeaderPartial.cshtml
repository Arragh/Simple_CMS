<div align="center">
    <table class="header">
        <tr>
            <td></td>
            <td class="username">
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <span class="username">@User.Identity.Name</span><input type="submit" value="Выход" />
                    </form>
                }
                else
                {
                    <a class="registration" asp-controller="Account" asp-action="Login">Вход</a>
                    <a class="registration" asp-controller="Account" asp-action="Register">Регистрация</a>
                }
            </td>
            <td></td>
        </tr>
        <tr height="150">
            <td class="logo" colspan="3">
                <span class="logo">@Simple_CMS.Models.Service.WebsiteConfig.Simple_WebsiteName</span>
            </td>
        </tr>
        <tr class="navmenu">
            <td align="center" colspan="3">
                <a class="navigation" asp-action="Index" asp-controller="News">Главная</a>
                <span>&nbsp;&nbsp;&nbsp;</span>
                <a class="navigation" asp-controller="Gallery" asp-action="Index">Галерея</a>
                @if (User.IsInRole("admin"))
                {
                    <span>&nbsp;&nbsp;&nbsp;</span>
                    @*@Html.ActionLink("Дополнительные страницы", "Index", "Page")*@
                    <a class="navigation" asp-action="Index" asp-controller="Page">Дополнительные страницы</a>
                    <span>&nbsp;&nbsp;&nbsp;</span>
                    @*@Html.ActionLink("Права доступа", "Index", "Role")*@
                    <a class="navigation" asp-action="Index" asp-controller="Role">Права доступа</a>
                    <span>&nbsp;&nbsp;&nbsp;</span>
                    <a class="navigation" asp-action="Settings" asp-controller="Admin">Настройки</a>
                }
            </td>
        </tr>
    </table>
</div>